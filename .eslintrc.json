{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "simple-import-sort"
    ],
    "rules": {
        "camelcase": "off",
        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error",
        "brace-style": ["error", "stroustrup"],
        "yoda": ["error", "always"],
        "curly": ["error", "all"]
    },
    "overrides": [{
        "files": ["./test/test.js"],
        "rules": {
            "no-undef": "off"
        }
    }]
}
